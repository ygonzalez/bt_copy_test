<% @title = "Listing asset_classes" %>

<% content_for :description do %>
  <p>Edit this template in <code>app/views/Asset_Classes/index.html.erb</code>.</p>
<% end %>

<% content_for :actions do %>
  <%= link_to new_asset_class_path, class: 'btn btn-primary btn-large pull-right' do %>
    <%= icon_tag "plus" %> Add Asset class
  <% end %>
<% end %>

<div class="sheet sheet-condensed">
  <div class="sheet-inner">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% @asset_classes.each do |asset_class| %>
        <tr>
          <td><%= asset_class.name %></td>
          <td class="actions">
            <%= link_to icon_tag("eye-open"), asset_class, rel: 'tooltip', title: 'Show' %>
            <%= link_to icon_tag("pencil"), edit_asset_class_path(asset_class), rel: 'tooltip', title: 'Edit' %>
            <%= link_to icon_tag("trash"), asset_class, rel: 'tooltip', title: 'Delete',
                        data: { confirm: 'Are you sure?' }, method: :delete %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div><!-- /.sheet-inner -->
</div><!-- /.sheet -->

<%# Remove the trailing if condition if you're using pagination. %>
<%= will_paginate @asset_classes if @asset_classes.respond_to?(:total_pages) %>
