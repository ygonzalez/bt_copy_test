<% @title = "Showing plan" %>

<div class="form-horizontal">
  <div class="control-group">
    <label class="control-label">Name</label>
    <div class="controls">
      <span class="uneditable-input span6"><%= @plan.name %></span>
    </div>
  </div>
  
  <div class="form-actions">
    <%= link_to icon_tag("pencil") + ' Edit', edit_plan_path(@plan), class: 'btn btn-primary' %>
    <%= link_to 'Back', plans_path, class: 'btn' %>
  </div>
</div>

